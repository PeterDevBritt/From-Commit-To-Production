pipeline {
    agent {
        node {
            label 'jenkins-slave8.yvu.ch'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'cd Gadgeothek; ./gradlew build'
            }
        }
        stage('Analyze Code') {
            steps {
                sh ./gradlew lint'
            }
        }
        stage('End2End Tests') {
            steps {
                sh 'adb shell am instrument ch.hsr.mge.gadgeothek.RegisterTest/ch.hsr.mge.gadgeothek.TestRunner'
            }
        }
    }
    post {
        success {
            archiveArtifacts '**/outputs/apk/*.apk'
        }
    }
}