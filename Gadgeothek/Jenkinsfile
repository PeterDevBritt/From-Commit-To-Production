pipeline {
    agent {
        node {
            label 'jenkins-slave8.yvu.ch'
        }
    }
    stages {
        stage('Build') {
            steps {
                cd Gadgeothek; ./gradlew build
            }
        }
        stage('End2End Tests') {
            steps {
                sh 'echo End2End Tests'
            }
        }
    }
    post {
        success {
            archiveArtifacts '**/outputs/apk/*.apk'
        }
    }
}